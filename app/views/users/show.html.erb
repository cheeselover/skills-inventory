<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @user.name %></h1><br />
      <p style="text-align:center">
        <%= @user.room %><br />
        <%= @user.email %>
      </p>
    </section>
  </aside>

  <div class="span8">
    <% if @user.skills.any? %>
      <h3 style="text-align:center">Skills (<%= @user.skills.count %>)</h3>
      <ul class="skills">
        <%= render @skills %>
      </ul>
      <%= will_paginate @skills, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>

<hr /><br />

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %><br /><br />

<%= button_to 'Add a Skill', new_skill_path, :class => "btn", :method => "get" %>
